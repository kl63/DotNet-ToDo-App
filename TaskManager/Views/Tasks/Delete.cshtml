@model TaskManager.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<div class="row mb-3">
    <div class="col">
        <h2>Delete Task</h2>
    </div>
    <div class="col text-end">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Confirm Deletion</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this task? This action cannot be undone.
        </div>
        
        <h3>@Model.Title</h3>
        
        <dl class="row mt-3">
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</dd>
            
            <dt class="col-sm-3">Due Date</dt>
            <dd class="col-sm-9">@Model.DueDate.ToString("dddd, MMMM d, yyyy")</dd>
            
            <dt class="col-sm-3">Priority</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Priority == "High" ? "bg-danger" : Model.Priority == "Medium" ? "bg-warning" : "bg-secondary")">
                    @Model.Priority
                </span>
            </dd>
            
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.IsCompleted ? "bg-success" : "bg-secondary")">
                    @(Model.IsCompleted ? "Completed" : "Pending")
                </span>
            </dd>
            
            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM d, yyyy h:mm tt")</dd>
        </dl>
        
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-danger w-100">Delete</button>
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
